<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DucktritionAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DucktritionAPP.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#123456">
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="{OnPlatform 'houseico.png', iOS='', MacCatalyst=''}"/>
        <ShellContent
            Title="Filters"
            ContentTemplate="{DataTemplate views:FilterPage}"
            Icon="{OnPlatform 'globalfiltersico.png', iOS='', MacCatalyst=''}"/>
        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate views:SearchPage}"
            Icon="{OnPlatform 'searchico.png', iOS='', MacCatalyst=''}"/>
        <ShellContent
            Title="Scanner"
            ContentTemplate="{DataTemplate views:ScannerPage}"
            Icon="{OnPlatform 'scanico.png', iOS='', MacCatalyst=''}"/>
        <ShellContent
            Title="Forum"
            ContentTemplate="{DataTemplate views:ForumPage}"
            Icon="{OnPlatform 'forumico.png', iOS='', MacCatalyst=''}"/>
    </TabBar>
    
</Shell>
