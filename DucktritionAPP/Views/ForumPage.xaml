<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DucktritionAPP.Views.ForumPage"
             Title="ForumPage">

    <VerticalStackLayout Spacing="10" Margin="5" Padding="20">

        <!-- Header -->
        <HorizontalStackLayout HorizontalOptions="Fill" VerticalOptions="StartAndExpand" Spacing="10">
            <Picker x:Name="SortPicker" WidthRequest="150">
                <Picker.Items>
                    <x:String>Sort: Latest</x:String>
                    <x:String>Sort: Most Popular</x:String>
                </Picker.Items>
            </Picker>
            <Label 
                Text="Ducktrition Forum"
                FontSize="20"
                FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <BoxView HeightRequest="1" Color="Gray"/>

        <!-- Forum Posts Area -->
        <VerticalStackLayout x:Name="PostsArea" Spacing="10">
            <!-- Example Post 1 -->
            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label Text="John Doe (User)" FontAttributes="Bold" FontSize="14"/>
                    <Label Text="This is an example forum post about healthy eating habits." FontSize="12" LineBreakMode="TailTruncation"/>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Button Text="Like" FontSize="10" />
                        <Button Text="Share" FontSize="10" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Example Post 2 -->
            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label Text="HealthyFoods Inc. (Manufacturer)" FontAttributes="Bold" FontSize="14"/>
                    <Label Text="Weâ€™ve just released a new gluten-free bread option available nationwide!" FontSize="12" LineBreakMode="TailTruncation"/>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Button Text="Like" FontSize="10" />
                        <Button Text="Share" FontSize="10" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>

        <!-- Create Post Button -->
        <Button 
            Text="+"
            FontSize="25"
            BackgroundColor="#4CAF50"
            TextColor="White"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="Start"
            VerticalOptions="End"
            Clicked="OnCreatePostClicked"/>
    </VerticalStackLayout>
</ContentPage>
