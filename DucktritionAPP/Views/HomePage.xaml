<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DucktritionAPP.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout Spacing="10" Margin="5" Padding="20">
        <Label 
            Text="Welcome"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Adjust Your Filters Below!"
            FontSize="10"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            />
        <VerticalStackLayout x:Name="ActiveFiltersArea">
            <Label Text="Active Filters" FontAttributes="Bold"/>
        </VerticalStackLayout>
        
        <BoxView HeightRequest="1" Color="Gray"/>
        
        <VerticalStackLayout x:Name="AvailableFiltersArea">
            <Label Text="Available Filters" FontAttributes="Bold" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>